{% extends 'WebsiteBundle:Layout:base.html.twig' %}

{% block body %}
<!-- PARTNER SECTION -->
<section class="" id="section--menu">
    <div class="constrained soft--top">
        <div class="row">
            <div class="col-md-12">
                <h2>Melt Raise The Dough</h2>
                <h3>{{ partner.name }}</h3>

                {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="form-group">
                        {{ form_label(form.name, 'Name') }}
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class':'form-control', 'required':'required'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, 'Email') }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class':'form-control', 'required':'required'}}) }}
                    </div>

                    {{ form_widget(form.save, {'attr': {'class':'btn btn-default'}}) }}

                {{ form_end(form) }}

            </div><!-- col -->
        </div><!-- row -->
    </div><!-- constrained -->
</section>
{% endblock body %}
