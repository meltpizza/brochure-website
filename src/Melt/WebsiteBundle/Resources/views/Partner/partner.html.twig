{% extends 'WebsiteBundle:Layout:base.html.twig' %}

{% block body %}
<!-- PARTNER SECTION -->
<section class="" id="section--partner-partner">
    <div class="constrained soft--top">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>RAISE DOUGH FOR {{ partner.name }}</h2>

                {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="form-group">
                        {{ form_label(form.name, 'Name') }}
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class':'form-control', 'required':'required'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, 'Email') }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class':'form-control', 'required':'required'}}) }}
                    </div>

                    {{ form_widget(form.submit, {'attr': {'class':'btn btn-primary'}}) }}

                {{ form_end(form) }}

                <p>You will receive registration confirmation via email, please present this in-store at MELT
                on [Insert event date] and 25% of the sale proceeds from the pizzas you and community buys will
                be donated back to {{ partner.name }} by way of fundraising. Good luck!</p>

            </div><!-- col -->
        </div><!-- row -->
    </div><!-- constrained -->
</section>
{% endblock body %}

{% block javascript %}
<script type="text/javascript">
$(function() {
    setTimeout(function() {
        $('#layout--header').fadeIn();
    }, 1000);
});
</script>
{% endblock javascript %}

